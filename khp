#!/usr/bin/env python3

extdir = 'ext'
import sys
import os
sys.path.append(os.path.join(os.path.dirname(__file__), extdir))
from kninja.runner import *

proj = KProject(extdir = extdir)

KDefinition( proj
           , alias = 'execution'
           , backend = 'java'
           , directory = proj.builddir('defn/execution')
           )

KDefinition( proj
           , alias = 'synthesis'
           , backend = 'java'
           , directory = proj.builddir('defn/synthesis')
           )

KRunner(proj).main()
